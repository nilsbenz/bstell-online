---
import { BstellIcon, EMAIL } from "@/lib/constants";
---

<footer class="bg-card">
  <div
    class="flex flex-col sm:flex-row flex-wrap justify-between max-w-4xl mx-auto px-6 py-12"
  >
    <div class="flex items-center self-start w-full md:w-auto">
      <BstellIcon className="mr-2 size-8" />
      <div>
        <p class="text-lg font-semibold leading-none">Bstell online</p>
        <p class="text-xs">
          © {new Date().getFullYear()}. All rights reserved.
        </p>
      </div>
    </div>
    <div class="mt-6 md:mt-0">
      <p class="font-semibold mb-1">Kontakt</p>
      <p>
        <a href={`mailto:${EMAIL}`}>{EMAIL}</a>
      </p>
    </div>
    <div class="mt-6 md:mt-0 w-auto sm:w-1/2 md:w-auto">
      <p class="font-semibold mb-1">Rechtliches</p>
      <p>
        <a href="/impressum"> Impressum </a>
      </p>
      <p>
        <a href="/agb"> Allgemeine Geschäftsbedingungen </a>
      </p>
    </div>
  </div>
</footer>

<style>
  a {
    cursor: pointer;
    @apply transition-colors;
    text-decoration-line: underline;
    text-decoration-thickness: 2px;
    text-decoration-color: transparent;
    text-underline-offset: 2px;
  }
  a:hover,
  a:focus {
    color: hsl(var(--primary));
    text-decoration-color: hsl(var(--primary));
  }
</style>
